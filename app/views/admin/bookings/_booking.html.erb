<div class="container mt-5 px-2 booking-all">
  <div class="mb-2 d-flex justify-content-between align-items-center">
    <div>
      <%= form_tag admin_bookings_path, method: :get do %>
      <%= text_field_tag :search, params[:search], class: "form-control w-100", placeholder: "Search by tour#, name..." %>
      <% end %>
    </div>
    <div class="px-2"> <span>Filters <i class="fa fa-angle-down"></i></span> <i class="fa fa-ellipsis-h ms-3"></i> </div>
  </div>

  <% if @bookings.empty? %>
    No records found!
  <% else %>
    <div class="table-responsive">
      <table class="table table-responsive table-borderless">
        <thead>
          <tr class="bg-light">
            <th scope="col" width="5%"><input class="form-check-input" type="checkbox"></th>
            <th scope="col" width="5%">#</th>
            <th scope="col" width="20%">Người đặt</th>
            <th scope="col" width="20%">Status</th>
            <th scope="col" width="20%">Tên tour</th>
            <th scope="col" width="10%">Số người đi cùng</th>
            <th scope="col" class="text-end" width="20%"><span>Tổng tiền</span></th>
            <th scope="col" width="20%">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @bookings.each do |booking| %>
            <tr>
              <%= link_to root_path do %>
                <th scope="row"><input class="form-check-input" type="checkbox"></th>
                <td><%= booking.id %></td>
                <td><img src="https://i.imgur.com/VKOeFyS.png" width="25"><%= booking.user.name %></td>
                <td class="mr-20">
                  <% if booking.status === "waiting" %>
                    <i class="fas fa-hourglass-half orange"></i><span class="ms-1">Đang chờ</span>
                  <% elsif booking.status === "rejected" %>
                    <i class="far fa-times-circle text-danger"></i><span class="ms-1">Tư chối</span>
                  <% else %>
                    <i class="fas fa-check-square green"></i><span class="ms-1">Đồng ý</span>
                  <% end %>
                </td>
                <td><%= booking.tour.name %></td>
                <td><%= booking.guests.count %></td>
                <td class="text-end"><span class="fw-bolder"><%= number_to_currency booking.total_money %></span></td>
                <td><%= link_to "edit", admin_booking_path(booking) %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

<div class="form-tour">
  <%= form_for(@tour, url: url, method: method) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :"Mô tả" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :"Giá Bán" %>
      <%= form.number_field :price, class: "form-control", min: 0,step: 100 %>
    </div>



    <div class="quantity">
       <div class="form-group">
        <%= form.label :"Loại Hình" %>
        <%= form.select(:sort, Tour.sorts.keys.to_a, {}, class: "form-control") %>
      </div>
      <div class="form-group item-quantity">
        <%= form.label :"Số lượng tối thiểu" %>
        <%= form.number_field :max_guest, class: "form-control", min: 0,step: 10 %>
      </div>

      <div class="form-group item-quantity">
        <%= form.label :"Số lượng tối đa" %>
        <%= form.number_field :min_guest, class: "form-control", min: 0,step: 10 %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :"duration" %>
      <%= form.text_field :duration, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :"info regular" %>
      <%= form.text_field :info_regular, class: "form-control", placeholder: "*Dành cho tour thường xuyên" %>
    </div>

    <div class="form-group">
      <%= form.label :images %>
      <%= form.file_field :images, class: "form-control" %>
    </div>

    <div class="button-create">
        <%= form.submit "Create Tours", class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</div>

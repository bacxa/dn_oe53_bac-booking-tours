<% @tours.map do |tour| %>
  <div class="col-6 col-lg-3">
    <div class="featured-tours-box">
      <%= link_to tour do %>
        <img src="<%= tour.images %>" />
        <div class="tour-name">
          <p> <%= tour.name %> </p>
        </div>
        <% if tour.rates.present? %>
          <div class="rating">
            <% tour.rating.times do  %>
              <i class="fas fa-star"></i>
            <% end %>
            <% (5 - tour.rating).times do  %>
              <i class="blank-star fas fa-star"></i>
            <% end %>
           <!--  <span><i class="fas fa-star icon-rating-tour"></i></span>
            <span><i class="fas fa-star icon-rating-tour"></i></span>
            <span><i class="fas fa-star icon-rating-tour"></i></span>
            <span><i class="fas fa-star icon-rating-tour"></i></span>
            <span><i class="fas fa-star icon-rating-tour"></i></span>
            <span><i class="fas fa-star"></i></span> -->
          </div></br>
        <% else %>
          <p> Chưa có đánh giá nào </p>
        <% end %>

        <div class="booking-price">
          <div class="price-tour">
            <p><%= tour.price %></p>
          </div>
          <div class="booking-tours-now">
            <button class="btn btn-primary"><%= link_to t(".booking_now"), new_booking_tour_path(tour) %></button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

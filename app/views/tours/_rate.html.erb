  <div class="row d-flex mt-100 mb-100">
    <div class="col-lg-6">
      <% @rates.map do |rate| %>
        <div class="comment-widgets">
          <div class="d-flex flex-row comment-row m-t-0">
            <div class="p-2"><img src="https://i.imgur.com/Ur43esv.jpg" alt="user" width="50" class="rounded-circle"></div>
            <div class="comment-text w-100">
              <h6 class="font-medium"><%= rate.user.name %></h6><span class="m-b-15 d-block"><%= rate.comment %></span>
              <div>
                <% rate.rating.to_i.times do  %>
                  <i class="fas fa-star"></i>
                <% end %>
              </div>
              <div class="comment-footer"> <span class="text-muted float-right"><%= rate.created_at%></span></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

<div class="container">
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <div class="card py-3 px-2">
        <div class="division">
          <div class="row">
            <div class="col-3">
              <div class="line l"></div>
            </div>
            <div class="col-6"><span>Đăng Ký bằng Email</span></div>
            <div class="col-3">
              <div class="line r"></div>
            </div>
          </div>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control form-user" %>
          </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-user" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-user" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-user" %>
          </div>

          <div class="form-group mt-3">
            <%= f.submit "Đăng ký", class:"btn btn-user"%>
          </div>
        <p>Bạn đã có tài khoản ? <%= render "users/shared/links"%></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
